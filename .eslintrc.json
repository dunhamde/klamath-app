{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
	"plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
	"react/jsx-filename-extension": "off",
	"semi": 0,
	"react/jsx-curly-newline": "off",
	"import/no-named-as-default": "off"
    }
}
